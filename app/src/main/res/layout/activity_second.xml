<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cmltdstudent.inclassassignment08_ningelb.SecondActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/food"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Name of Food" />

    <EditText
        android:id="@+id/calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calories"/>

    <CheckBox
        android:id="@+id/healthy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Is it healthy?"/>

    <Button
        android:id="@+id/firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Firebase"
        android:textAllCaps="true"
        android:onClick="firebase"/>

</LinearLayout>
